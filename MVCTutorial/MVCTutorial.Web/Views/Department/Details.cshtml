@model MVCTutorial.Web.Models.Department

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DepartmentHead)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentHead)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Employees)
        </dt>

        <dd>
            <table class="table table-hover">
                @{
                    foreach (var employee in Model.Employees)
                    {
                        <tr>
                            <td style="padding-right:20px;">@employee.Name</td>
                            <td style="padding-right:20px;">@employee.Gender</td>
                            <td style="padding-right:20px;">@employee.Salary</td>
                        </tr>
                    }
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
